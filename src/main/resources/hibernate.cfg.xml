<hibernate-configuration>
    <session-factory>

        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/bookins_system_demo_db</property>
        <property name="connection.username">root</property>
        <property name="connection.password">MySQL-root-passwordGreenn</property>
        <property name="hibernate.show_sql ">true</property>
        <property name="hbm2ddl.validate">update</property>
        <mapping class="com.example.demosystembacjend.Entities.Booking" />

    </session-factory>
</hibernate-configuration>